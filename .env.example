# Django Settings
SECRET_KEY=your-secret-key-here-generate-a-secure-random-string
DEBUG=False
ALLOWED_HOSTS=your-app.railway.app,localhost,127.0.0.1

# Database (Railway provides this automatically when you add PostgreSQL)
DATABASE_URL=postgres://user:password@host:port/dbname

# AI APIs
ANTHROPIC_API_KEY=sk-ant-api...
OPENAI_API_KEY=sk-...  # For embeddings (optional, but recommended)

# Optional: Planning Center Integration
PLANNING_CENTER_APP_ID=
PLANNING_CENTER_SECRET=

# Web Push Notifications (VAPID keys)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_CLAIMS_EMAIL=mailto:admin@cherryhills.org

# Stripe Billing (required for paid subscriptions)
# Get keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# Webhook secret - get from Stripe Dashboard after creating webhook
# https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_...

# Stripe Price IDs - create products/prices in Stripe Dashboard
# https://dashboard.stripe.com/products
STRIPE_PRICE_STARTER_MONTHLY=price_...
STRIPE_PRICE_STARTER_YEARLY=price_...
STRIPE_PRICE_TEAM_MONTHLY=price_...
STRIPE_PRICE_TEAM_YEARLY=price_...
STRIPE_PRICE_MINISTRY_MONTHLY=price_...
STRIPE_PRICE_MINISTRY_YEARLY=price_...

# Multi-Tenant Settings
TRIAL_PERIOD_DAYS=14
DEFAULT_AI_ASSISTANT_NAME=Aria
